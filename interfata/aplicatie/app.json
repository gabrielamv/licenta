{
  "expo": {
    "name": "Povești Brodate",
    "slug": "Povești Brodate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo_home.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo_home.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "Această aplicație salvează imagini în galeria ta.",
        "NSPhotoLibraryUsageDescription": "Această aplicație are nevoie de acces la galerie pentru a salva poze."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo_home.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "READ_MEDIA_IMAGES",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/logo_home.png"
    },
    "plugins": [
      "expo-font"
    ]
  }
}
